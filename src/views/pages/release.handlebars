<!DOCTYPE html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{{nameApplication}} :: {{title_createRelease}}</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
    <!-- CSS -->
  </head>
  <body>
  {{> ../partials/header }}
  <div id="mainContent" class="container-fluid py-3">
    <div class="col-md-11 align-self-center">
      <h2>{{title_createRelease}}</h2>
      <div class="row">
        <div class="col-lg-1">
          <span class="badge badge__status--{{lowercase badgeText_status.[1]}}" id="releaseNoteStatus">{{badgeText_status.[1]}}</span>
        </div>
        <div class="col-lg-4">
          <div class="row">
            <div class="form-group col-md-12">
              <input type="text" placeholder="{{placeholder_title}}" name="title" class="form-control" />
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-6">
              <input type="text" placeholder="{{placeholder_releaseVersion}}" name="version" class="form-control" />
            </div>
            <div class="form-group col-md-6">
              <div class="faButton">
                <input type="date" placeholder="{{placeholder_releaseDate}}" name="date" class="form-control" /><i class="fa fa-calendar-alt"></i>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="form-group">
            <textarea name="description" placeholder="{{placeholder_releaseDescription}} {{placeholder_optional}}" class="form-control"></textarea>
          </div>
        </div>
        <div class="col-lg-2 text-right">
          <div class="btn-group d-flex" role="group">
            <button type="button" class="btn btn-outline-primary w-100 text-left">{{languages.[0]}}</button>
            <button type="button" class="btn btn-outline-primary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown">
              <span class="caret"></span>
            </button>
            <div class="dropdown-menu w-100">
              {{#each languages}}
              <a class="dropdown-item" href="#">{{this}}</a>
              {{/each}}
            </div>
          </div>
          <br />
          <div class="faButton">
            <button type="button" class="btn btn-outline-primary btn-block text-left btn__addTranslation">{{buttonText_addTranslation}}</button><i class="fa fa-plus-circle"></i>
          </div> 
        </div>
      </div>
<br /><br />
  <div class="row">
    <div class="col-lg-11 text-right">
      <a href="index.html" class="btn btn-secondary btn--caps">{{buttonText_cancel}}</a>
      
      <div class="btn-group">
        <button type="button" class="btn btn-primary btn--caps">{{buttonText_actions__release.[6]}}</button>
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
          <span class="caret"></span>
        </button>
        <div class="dropdown-menu">
          {{#each buttonText_actions__release}}
          <a class="dropdown-item" href="#">{{this}}</a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
  <!-- Remove This - For demo purposes only. Navigation through the app will be facilitated by action buttons above. -->
  <br /><br />
  <div class="row">
    <div class="col-sm-11 text-right">
      <a href="item.html" class="btn btn-outline-primary">{{buttonText_goToReleaseNotes}} <i class="fa fa-arrow-circle-right"></i></a>
    </div>
  </div>
  <!-- End Remove This -->
</div>
</div>
  </body>
</html>
